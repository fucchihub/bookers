<h2>Editing List</h2>

<% if @book.errors.any? %>
  <p><%= pluralize(@book.errors.count, "error") %> prohibited your book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
<% end %>


